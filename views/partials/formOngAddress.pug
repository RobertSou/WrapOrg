form#formEnderecoDoacao(action="/ong/config/ongAddress", method="post")
    div#leftAdressContainer
        input(
            type="text"
            name="endereco"
            placeholder="Digite seu endere√ßo"
            value=typeof endereco != 'undefined' ? endereco : ''
        )
        input(
            type="text"
            name="estado"
            placeholder="Digite seu Estado"
            value=typeof estado != 'undefined' ? estado : ''
        )
        input(
            type="text"
            name="cidade"
            placeholder="Digite sua cidade"
            value=typeof cidade != 'undefined' ? cidade : ''
        )
        input(
            type="number"
            name="cep"
            placeholder="Digite seu CEP"
            value=typeof cep != 'undefined' ? cep : ''
        )
        input(
            type="tel"
            name="telefone"
            placeholder="Digite seu telefone de contato"
            value=typeof telefone != 'undefined' ? telefone : ''
        )
    div#formAdressButtons
        input(type="submit" value="SALVAR")
