doctype html
html
    include partials/header.pug
    body
        // Header
        header(id="headerDash")
            div(id="leftContainer")
                a(class="menu-active" href="/dashboardOng")
                    i(class="fas fa-hands")
                a(href="/doacoesPendentes")
                    i(class="fas fa-bookmark")
            div(class="dashboardName")
                p=name
            div(id="rightContainer")
                a(href="/config")
                    i(class="fas fa-cog")
                a(href="/logout")
                    i(class="fas fa-sign-out-alt")
        // Body content
        div(class="card cardError")
            i(class="fas fa-exclamation-circle")
            p Seu perfil está imcompleto, preencha algumas informações para poder doar.
            i(class="closeCard fas fa-times")
        div(class="card cardSucess")
            i(class="fas fa-check-circle")
            p Configurações alteradas com sucesso
            i(class="closeCard fas fa-times")
        main(id="mainDashboard")
            header.HeaderDashboard
                h1 Bem vindo(a) #{name}
                h4 Faça sua doação aqui.
            article.form
                form
                    input#nomeDoar(
                        type="text"
                        name="text"
                        placeholder="Digite seu Nome"
                    )
                    input(type="text" placeholder="Endereço")
                    input(type="text" placeholder="Telefone")
                    input(type="text" placeholder="Quantidade de peças")
                    input(type="submit", value="Doar")